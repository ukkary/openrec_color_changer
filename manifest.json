{
	"manifest_version": 2,
	"author": "ukkary",
	"name": "openrec-color-changer",
	"description": "change openrec's name color",
	"version": "1.1",
	"icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
},
	"browser_action": {
		"matches": ["https://www.openrec.tv/*"],
		"default_popup": "popup.html",
		"default_icon": {
			"48": "48.png"
		}
	},
	"content_scripts": [
		{
			"default_name": "OPENREC-NAME-COLOR",
			"matches": ["https://www.openrec.tv/*"],
			"js": ["contents.js"]
		}
	],
	"permissions": ["declarativeContent", "tabs"]
}